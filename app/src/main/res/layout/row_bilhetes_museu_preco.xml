    <TextView
        android:id="@+id/preco_museus_valor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0.00"
        app:layout_constraintEnd_toStartOf="@+id/preco_museus_euro_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/preco_museus_dia_1_text"
        app:layout_constraintTop_toBottomOf="@+id/preco_museus_text" />

    <TextView
        android:id="@+id/preco_museus_valor_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
