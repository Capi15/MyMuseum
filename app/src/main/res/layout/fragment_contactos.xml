<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contactos.ContactosFragment">

    <TextView
        android:id="@+id/contactos_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaced_margins"
        android:text="@string/telefone_field"
        android:textColor="@color/newCorTexto"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contactos_mensagem_corpo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactos_telefone_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefone"
        android:textColor="@color/newCorTexto"
        app:layout_constraintBaseline_toBaselineOf="@+id/contactos_telefone"
        app:layout_constraintEnd_toEndOf="@+id/contactos_mensagem_corpo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/contactos_telefone" />

    <TextView
        android:id="@+id/contactos_telemovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/telemovel_field"
        android:textColor="@color/newCorTexto"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contactos_telefone"
        app:layout_constraintTop_toBottomOf="@+id/contactos_telefone" />

    <TextView
        android:id="@+id/contactos_telemovel_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nosso_telemovel"
        android:textColor="@color/newCorTexto"
        app:layout_constraintBaseline_toBaselineOf="@+id/contactos_telemovel"
        app:layout_constraintEnd_toEndOf="@+id/contactos_telefone_numero"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/contactos_telefone" />

    <TextView
        android:id="@+id/contactos_mensagem_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/escreva_mensagem"
        android:textColor="@color/newCorTexto"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactos_telemovel" />

    <EditText
        android:id="@+id/contactos_mensagem_corpo"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_corpo_mensagens"
        android:layout_marginStart="@dimen/spaced_margins"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/spaced_margins"
        android:textColor="@color/newCorTexto"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactos_mensagem_mensagem" />

    <Button
        android:id="@+id/contactos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar_mensagem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactos_mensagem_corpo" />

</androidx.constraintlayout.widget.ConstraintLayout>